{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom",
      "esnext.asynciterable"
    ],    
    "paths": {
      "@app/*": ["src/app/*"],
      "@components/*": ["src/app/components/*"],
      "@candidate/*": ["src/app/components/candidate/*"],
      "@qualificacoes/*": ["src/app/components/qualificacoes/*"],
      "@tipoQualificacoes/*": ["src/app/components/tipoQualificacoes/*"],
      "@vagas/*": ["src/app/components/vagas/*"],
      "@empresas/*": ["src/app/components/empresas/*"],
      "@model/*": ["src/app/model/*"],
      "@services/*": ["src/app/services/*"],
      "@environment/*": ["src/environments/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
